<%- include('./../header'); -%>

    <div class="container">
        <div class="row pt-5 justify-content-center">
            <div class="col-8">
                <div class="card card-default">
                    <div class="card-header">
                        <h5>ورود به سایت</h5>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" method="POST" action="/login" novalidate="">

                           <%- include('./../layout/error-message.ejs') -%>
                                <div class="form-group">
                                    <label for="email" class="control-label">آدرس ایمیل</label>
                                    <input id="email" type="email" class="form-control" name="email" value=""
                                        required autofocus="">
                                </div>

                                <div class="form-group">
                                    <label for="password" class="control-label">پسورد</label>
                                    <input id="password" type="password" class="form-control" name="password"
                                        required="">
                                </div>

                                <div class="form-group">
                                    <div class="checkbox">
                                        <input type="checkbox" name="remember">یاد آوری ورود
                                        <label>

                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                  <%- recaptcha %>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">ورود</button>
                                    <a href="/login/google" class="btn btn-danger">ورود با اکانت گوگل</a>
                                    <a class="btn btn-link" href="#">رمز عبور را فرامش کردم !</a>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./../footer'); -%>